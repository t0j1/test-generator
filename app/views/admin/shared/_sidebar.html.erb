<aside class="w-64 bg-gray-900 text-white min-h-screen">
  <div class="p-6">
    <h2 class="text-xl font-bold mb-6">管理メニュー</h2>
    
    <nav class="space-y-2">
      <%= link_to admin_root_path, class: "block px-4 py-2 rounded hover:bg-gray-800 #{current_page?(admin_root_path) ? 'bg-gray-800' : ''}" do %>
        <span class="text-lg">📊 ダッシュボード</span>
      <% end %>
      
      <%= link_to admin_questions_path, class: "block px-4 py-2 rounded hover:bg-gray-800 #{current_page?(admin_questions_path) ? 'bg-gray-800' : ''}" do %>
        <span class="text-lg">📝 問題管理</span>
      <% end %>
      
      <%= link_to import_form_admin_questions_path, class: "block px-4 py-2 rounded hover:bg-gray-800 #{current_page?(import_form_admin_questions_path) ? 'bg-gray-800' : ''}" do %>
        <span class="text-lg">📥 CSVインポート</span>
      <% end %>
      
      <%= link_to export_admin_questions_path(format: :csv), class: "block px-4 py-2 rounded hover:bg-gray-800" do %>
        <span class="text-lg">📤 CSVエクスポート</span>
      <% end %>
      
      <hr class="my-4 border-gray-700">
      
      <%= link_to root_path, class: "block px-4 py-2 rounded hover:bg-gray-800" do %>
        <span class="text-lg">🏠 ホームに戻る</span>
      <% end %>
    </nav>
  </div>
</aside>
