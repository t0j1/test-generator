<div class="space-y-6">
  <h2 class="text-3xl font-bold text-gray-900">ダッシュボード</h2>
  
  <!-- 統計サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500 mb-2">総問題数</div>
      <div class="text-4xl font-bold text-blue-600"><%= @total_questions %></div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500 mb-2">総テスト数</div>
      <div class="text-4xl font-bold text-green-600"><%= @total_test_sheets %></div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500 mb-2">科目数</div>
      <div class="text-4xl font-bold text-purple-600"><%= @questions_by_subject.size %></div>
    </div>
  </div>
  
  <!-- 科目別問題数 -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">科目別問題数</h3>
    <div class="space-y-3">
      <% @questions_by_subject.each do |item| %>
        <div class="flex items-center justify-between py-2 border-b border-gray-200">
          <span class="text-lg font-medium text-gray-700"><%= item[:subject].name %></span>
          <span class="text-2xl font-bold text-blue-600"><%= item[:count] %>問</span>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- 難易度別問題数 -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">難易度別問題数</h3>
    <div class="grid grid-cols-3 gap-4">
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-sm text-gray-600 mb-2">易しい</div>
        <div class="text-3xl font-bold text-green-600"><%= @questions_by_difficulty[:easy] %></div>
      </div>
      <div class="text-center p-4 bg-blue-50 rounded-lg">
        <div class="text-sm text-gray-600 mb-2">普通</div>
        <div class="text-3xl font-bold text-blue-600"><%= @questions_by_difficulty[:normal] %></div>
      </div>
      <div class="text-center p-4 bg-red-50 rounded-lg">
        <div class="text-sm text-gray-600 mb-2">難しい</div>
        <div class="text-3xl font-bold text-red-600"><%= @questions_by_difficulty[:hard] %></div>
      </div>
    </div>
  </div>
  
  <!-- 最近作成されたテスト -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">最近作成されたテスト</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">科目</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">単元</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">難易度</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">問題数</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">作成日時</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_test_sheets.each do |test_sheet| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= test_sheet.subject.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= test_sheet.unit.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= test_sheet.difficulty.present? ? Question::DIFFICULTY_LABELS[test_sheet.difficulty] : "ミックス" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= test_sheet.question_count %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= test_sheet.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- 最近追加された問題 -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-4">最近追加された問題</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">単語</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">意味</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">科目</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">単元</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">難易度</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">追加日時</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_questions.each do |question| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= question.word %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= question.meaning %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= question.subject.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= question.unit.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= Question::DIFFICULTY_LABELS[question.difficulty] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= question.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
