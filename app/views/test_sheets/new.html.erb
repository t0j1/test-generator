<div class="min-h-screen bg-gray-50 py-4 md:py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- ヘッダー -->
    <div class="text-center mb-6 md:mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">単語テスト作成</h1>
      <p class="text-base md:text-lg text-gray-600">科目・単元・難易度を選んでテストを作成します</p>
    </div>

    <!-- 横画面警告（タブレット用） -->
    <div class="hidden landscape:block md:landscape:hidden bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-6 text-center">
      <div class="text-6xl mb-4">📱</div>
      <p class="text-xl font-bold text-yellow-800">画面を縦にしてください</p>
      <p class="text-sm text-yellow-700 mt-2">このアプリは縦画面での使用を推奨しています</p>
    </div>

    <!-- フラッシュメッセージ -->
    <% if flash[:notice] %>
      <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-lg text-lg">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-lg text-lg">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- エラーメッセージ -->
    <% if @test_sheet && @test_sheet.errors.any? %>
      <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-6">
        <h3 class="text-red-800 font-bold mb-3 text-xl">エラーが発生しました</h3>
        <ul class="list-disc list-inside text-red-700 text-lg">
          <% @test_sheet.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- ローディングオーバーレイ -->
    <div id="loading-overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
      <div class="bg-white rounded-lg p-8 text-center">
        <div class="inline-block h-16 w-16 animate-spin rounded-full border-4 border-solid border-blue-600 border-r-transparent mb-4"></div>
        <p class="text-xl font-bold text-gray-900">読み込み中...</p>
        <p class="text-sm text-gray-600 mt-2">しばらくお待ちください</p>
      </div>
    </div>

    <!-- フォーム -->
    <div class="bg-white shadow-lg rounded-lg p-6 md:p-8">
      <%= form_with model: @test_sheet, url: test_sheets_path, method: :post, data: { controller: "test-form", action: "submit->test-form#handleSubmit" } do |f| %>
        
        <!-- Step 1: 科目選択 -->
        <div class="mb-8">
          <label class="block text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            1. 科目を選んでください
          </label>
          <div class="grid grid-cols-2 gap-4 md:gap-6">
            <% @subjects.each do |subject| %>
              <label class="cursor-pointer touch-manipulation select-none">
                <input 
                  type="radio" 
                  name="test_sheet[subject_id]" 
                  value="<%= subject.id %>" 
                  class="hidden peer"
                  data-test-form-target="subjectRadio"
                  data-action="change->test-form#onSubjectChange"
                  required
                >
                <div class="
                  min-h-32 md:min-h-40
                  border-4 border-gray-200 
                  rounded-2xl 
                  p-6 md:p-8
                  text-center 
                  active:scale-95
                  peer-checked:border-8 
                  peer-checked:shadow-2xl 
                  peer-checked:bg-blue-50
                  transition-all
                  flex flex-col items-center justify-center
                  touch-manipulation
                "
                     style="peer-checked:border-color: <%= subject_color(subject) %>">
                  <div class="text-5xl md:text-6xl mb-3" style="color: <%= subject_color(subject) %>">●</div>
                  <div class="font-bold text-xl md:text-2xl"><%= subject.name %></div>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Step 2: 単元選択 -->
        <div class="mb-8 hidden" data-test-form-target="unitSection">
          <label class="block text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            2. 単元を選んでください
          </label>
          <div id="unit-selection" data-test-form-target="unitList">
            <!-- JavaScriptで動的に生成 -->
          </div>
        </div>

        <!-- Step 3: 設定 -->
        <div class="mb-8 hidden" data-test-form-target="settingsSection">
          <label class="block text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            3. テストの設定
          </label>

          <div class="space-y-8">
            <!-- 難易度 -->
            <div>
              <label class="block text-xl font-bold text-gray-700 mb-3">
                難易度
              </label>
              <%= f.select :difficulty, 
                  difficulty_options_for_select_with_mix, 
                  {},
                  class: "w-full h-16 text-xl border-2 border-gray-300 rounded-xl shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 touch-manipulation",
                  data: { 
                    test_form_target: "difficultySelect",
                    action: "change->test-form#onDifficultyChange"
                  }
              %>
            </div>

            <!-- 問題数 -->
            <div>
              <label class="block text-xl font-bold text-gray-700 mb-3">
                問題数
              </label>
              <%= f.select :question_count,
                  question_count_options,
                  { selected: TestSheet::DEFAULT_QUESTION_COUNT },
                  class: "w-full h-16 text-xl border-2 border-gray-300 rounded-xl shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 touch-manipulation",
                  data: { test_form_target: "questionCountSelect" }
              %>
              <p class="mt-3 text-lg text-gray-600" data-test-form-target="availableInfo">
                利用可能な問題数: <span data-test-form-target="availableCount" class="font-bold text-blue-600">-</span>問
              </p>
            </div>

            <!-- ヒント表示 -->
            <div class="flex items-center min-h-16">
              <%= f.check_box :include_hint, 
                  class: "h-8 w-8 text-blue-600 focus:ring-2 focus:ring-blue-500 border-2 border-gray-300 rounded touch-manipulation" %>
              <%= f.label :include_hint, "ヒントを表示する", class: "ml-4 text-xl text-gray-700 select-none" %>
            </div>

            <!-- 解答表示 -->
            <div class="flex items-center min-h-16">
              <%= f.check_box :include_answer,
                  checked: TestSheet::DEFAULT_INCLUDE_ANSWER,
                  class: "h-8 w-8 text-blue-600 focus:ring-2 focus:ring-blue-500 border-2 border-gray-300 rounded touch-manipulation" %>
              <%= f.label :include_answer, "解答を表示する", class: "ml-4 text-xl text-gray-700 select-none" %>
            </div>
          </div>
        </div>

        <!-- 送信ボタン -->
        <div class="mt-8 hidden" data-test-form-target="submitSection">
          <%= f.submit "テストを作成", 
              class: "w-full min-h-20 bg-blue-600 active:bg-blue-800 text-white font-bold text-2xl rounded-2xl shadow-lg active:shadow-none active:scale-95 transition-all touch-manipulation select-none",
              data: { test_form_target: "submitButton" }
          %>
        </div>

      <% end %>
    </div>

    <!-- 印刷履歴へのリンク -->
    <div class="mt-8 text-center">
      <%= link_to "印刷履歴を見る", history_test_sheets_path, class: "inline-block min-h-16 px-8 py-4 text-xl text-blue-600 active:text-blue-800 font-bold border-2 border-blue-600 rounded-xl active:scale-95 transition-all touch-manipulation select-none" %>
    </div>
  </div>
</div>
