<div class="min-h-screen flex flex-col relative overflow-hidden bg-landing">
  
  <!-- 背景イラスト（背面・中央固定） -->
  <div class="absolute inset-0 flex items-center justify-center landing-illustration-bg">
    <%= image_tag "book-printer-bg.png", 
        alt: "本とプリンター", 
        class: "landing-illustration-img" %>
  </div>
  
  <!-- 上部: メインメッセージ（イラスト上部に重ねる） -->
  <div class="relative z-10 flex-shrink-0 landing-title-area">
    <h1 class="text-5xl md:text-6xl font-black text-center landing-title">
      今日の単語力を、<br>
      今すぐプリントアウト
    </h1>
  </div>
  
  <!-- 中央: スペーサー（イラストの領域） -->
  <div class="flex-grow"></div>
  
  <!-- 下部: スタートボタン（イラスト下部に重ねる） -->
  <div class="relative z-10 flex-shrink-0 landing-button-area">
    <%= link_to step1_test_sheets_path, 
        data: { turbo: false },
        class: "landing-start-button btn-neo block text-center rounded-2xl mx-auto" do %>
      📱 画面をタップしてスタート
    <% end %>
  </div>
  
</div>
