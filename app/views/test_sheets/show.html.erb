<div class="min-h-screen bg-white" data-controller="print">
  <!-- 画面表示用ヘッダー（印刷時は非表示） -->
  <div class="no-print bg-gradient-to-r from-blue-500 to-blue-600 px-4 py-6 md:px-6 md:py-8">
    <div class="mx-auto max-w-6xl">
      <!-- タイトル -->
      <div class="mb-6 text-center md:text-left">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">✅ テスト作成完了！</h1>
        <p class="text-lg md:text-xl text-blue-100">
          <%= @test_sheet.subject.name %> - <%= @test_sheet.unit.name %> / 全<%= @test_sheet.question_count %>問
        </p>
        <p class="text-sm md:text-base text-blue-200 mt-1">
          <%= format_test_created_at(@test_sheet) %> 作成
        </p>
      </div>
      
      <!-- 印刷ボタン（キオスクモード：超大型） -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-4">
        <!-- すべて印刷（メインボタン） -->
        <button 
          data-action="click->print#executeAll"
          class="bg-white text-blue-600 rounded-2xl px-6 py-8 md:py-12 text-center shadow-xl active:scale-95 transition-all touch-manipulation">
          <div class="text-5xl md:text-6xl mb-3">🖨️</div>
          <div class="text-2xl md:text-3xl font-bold mb-2">すべて印刷</div>
          <div class="text-base md:text-lg text-gray-600">問題用紙 + 解答用紙</div>
        </button>
        
        <!-- 問題のみ印刷 -->
        <button 
          data-action="click->print#executeQuestions"
          class="bg-white text-green-600 rounded-2xl px-6 py-8 md:py-12 text-center shadow-xl active:scale-95 transition-all touch-manipulation">
          <div class="text-5xl md:text-6xl mb-3">📝</div>
          <div class="text-2xl md:text-3xl font-bold mb-2">問題のみ</div>
          <div class="text-base md:text-lg text-gray-600">生徒配布用</div>
        </button>
        
        <!-- 解答のみ印刷 -->
        <% if @test_sheet.include_answer? %>
          <button 
            data-action="click->print#executeAnswers"
            class="bg-white text-purple-600 rounded-2xl px-6 py-8 md:py-12 text-center shadow-xl active:scale-95 transition-all touch-manipulation">
            <div class="text-5xl md:text-6xl mb-3">✅</div>
            <div class="text-2xl md:text-3xl font-bold mb-2">解答のみ</div>
            <div class="text-base md:text-lg text-gray-600">講師用</div>
          </button>
        <% else %>
          <div class="bg-gray-100 rounded-2xl px-6 py-8 md:py-12 text-center opacity-50">
            <div class="text-5xl md:text-6xl mb-3">✅</div>
            <div class="text-2xl md:text-3xl font-bold mb-2 text-gray-400">解答なし</div>
            <div class="text-base md:text-lg text-gray-500">解答を含めていません</div>
          </div>
        <% end %>
      </div>
      
      <!-- 戻るボタン -->
      <div class="text-center">
        <%= link_to root_path, class: "inline-block bg-blue-700 text-white rounded-xl px-8 py-4 text-xl font-bold active:scale-95 transition-all touch-manipulation" do %>
          ← 新しいテストを作成
        <% end %>
      </div>
    </div>
  </div>

  <!-- 問題用紙 -->
  <div id="questions-sheet" class="print-section">
    <div class="print-page mx-auto max-w-4xl p-8">
      <!-- テストヘッダー -->
      <div class="mb-8 border-b-2 border-gray-300 pb-6">
        <div class="mb-4 flex items-start justify-between">
          <div>
            <h2 class="mb-2 text-3xl font-bold text-gray-900">
              <%= @test_sheet.subject.name %> - <%= @test_sheet.unit.name %>
            </h2>
            <p class="text-lg text-gray-600">
              <%= difficulty_label_for_display(@test_sheet) %> / 
              全<%= @test_sheet.question_count %>問
            </p>
          </div>
          <div class="text-right">
            <div class="mb-2">
              <span class="text-sm text-gray-600">学年:</span>
              <span class="text-lg font-bold">高<%= @test_sheet.unit.grade %></span>
            </div>
            <div>
              <span class="text-sm text-gray-600">作成日:</span>
              <span class="text-sm"><%= format_test_created_at(@test_sheet) %></span>
            </div>
          </div>
        </div>

        <!-- 名前記入欄 -->
        <div class="flex gap-6">
          <div class="flex-1">
            <label class="mb-1 block text-sm font-medium text-gray-700">氏名</label>
            <div class="name-line"></div>
          </div>
          <div class="w-32">
            <label class="mb-1 block text-sm font-medium text-gray-700">得点</label>
            <div class="score-line"></div>
          </div>
        </div>
      </div>

      <!-- 問題リスト -->
      <div class="space-y-6">
        <% @questions.each_with_index do |test_question, index| %>
          <% question = test_question.question %>
          
          <!-- 問題数が多い場合、途中で改ページ（31問以上なら30問目の後） -->
          <% if @test_sheet.question_count >= 31 && index == 30 %>
            <div class="page-break"></div>
          <% end %>
          
          <div class="question-item border-b border-gray-200 pb-6">
            <!-- 問題番号と問題文 -->
            <div class="flex gap-4">
              <div class="w-12 flex-shrink-0 text-right">
                <span class="text-xl font-bold text-gray-700">
                  <%= question_number_label(test_question.question_order) %>
                </span>
              </div>
              <div class="flex-1">
                <p class="mb-2 text-lg text-gray-900">
                  <%= question.question_text %>
                </p>

                <!-- ヒント表示 -->
                <% if @test_sheet.include_hint? && question.hint.present? %>
                  <p class="mb-2 text-sm italic text-gray-600">
                    💡 ヒント: <%= question.hint %>
                  </p>
                <% end %>

                <!-- 解答欄 -->
                <div class="mt-3">
                  <span class="text-sm text-gray-600">解答:</span>
                  <div class="answer-line"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 解答用紙（別紙・改ページ） -->
  <% if @test_sheet.include_answer? %>
    <div id="answers-sheet" class="print-section page-break-before">
      <div class="print-page mx-auto max-w-4xl p-8">
        <!-- 解答用紙ヘッダー -->
        <div class="mb-8 border-b-2 border-gray-300 pb-6">
          <h2 class="mb-2 text-3xl font-bold text-gray-900">解答用紙</h2>
          <p class="text-lg text-gray-600">
            <%= @test_sheet.subject.name %> - <%= @test_sheet.unit.name %>
          </p>
          <p class="mt-1 text-sm text-gray-500">
            作成日: <%= format_test_created_at(@test_sheet) %>
          </p>
        </div>

        <!-- 解答リスト -->
        <div class="grid grid-cols-2 gap-x-8 gap-y-3">
          <% @questions.each_with_index do |test_question, index| %>
            <% question = test_question.question %>
            
            <!-- 解答数が多い場合、途中で改ページ（31問以上なら30問目の後） -->
            <% if @test_sheet.question_count >= 31 && index == 30 %>
              <div class="col-span-2 page-break"></div>
            <% end %>
            
            <div class="flex items-baseline gap-3">
              <span class="w-8 text-right font-bold text-gray-700">
                <%= test_question.question_order %>.
              </span>
              <span class="text-gray-900">
                <%= question.answer_text %>
              </span>
              <% if question.respond_to?(:answer_note) && question.answer_note.present? %>
                <span class="text-sm text-gray-500">
                  (<%= question.answer_note %>)
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
