<!-- デバッグ用の簡易版step2 -->
<div class="p-8">
  <h1 class="text-3xl font-bold mb-4">Step 2 Debug</h1>
  
  <div class="mb-4">
    <p><strong>Subject ID:</strong> <%= params[:subject_id] %></p>
    <p><strong>Subject:</strong> <%= @subject.inspect %></p>
    <p><strong>Subject Name:</strong> <%= @subject&.name %></p>
  </div>

  <div class="mb-4">
    <p><strong>Units Count:</strong> <%= @units&.count %></p>
  </div>

  <% if @units && @units.any? %>
    <ul class="list-disc pl-8">
      <% @units.each do |unit| %>
        <li><%= unit.name %> (Grade: <%= unit.grade %>)</li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-red-600">No units found</p>
  <% end %>

  <div class="mt-8">
    <h2 class="text-xl font-bold mb-2">Test Helper Methods</h2>
    <% if @subject %>
      <p><strong>subject_color:</strong> <%= subject_color(@subject) %></p>
      <p><strong>subject_icon:</strong> <%= subject_icon(@subject) %></p>
    <% end %>
  </div>

  <div class="mt-8">
    <h2 class="text-xl font-bold mb-2">Form Helper Methods</h2>
    <p><strong>difficulty_options:</strong></p>
    <pre><%= difficulty_options_for_select_with_mix.inspect %></pre>
    
    <p class="mt-4"><strong>question_count_options:</strong></p>
    <pre><%= question_count_options.inspect %></pre>
  </div>
</div>
