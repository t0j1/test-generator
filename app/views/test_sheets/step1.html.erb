<div class="bg-gradient-animated">
  <div class="kiosk-container-glass" data-controller="kiosk-navigation">
    <!-- ヘッダー: プログレスバー -->
    <div class="kiosk-header-glass">
      <div class="progress-bar-glass">
        <div class="progress-segment-glass active"></div>
        <div class="progress-segment-glass"></div>
        <div class="progress-segment-glass"></div>
      </div>
      <div class="text-center">
        <p class="text-glass-body font-bold">Step 1 / 3</p>
      </div>
    </div>

    <!-- メインコンテンツ -->
    <div class="kiosk-main-glass">
      <div class="text-center mb-12">
        <div class="glass-card-static inline-block px-8 py-6 mb-8 rounded-glass-lg">
          <div class="text-6xl mb-4">📚</div>
        </div>
        <h1 class="heading-glass-2 mb-4">科目を選んでください</h1>
        <p class="text-glass-body">タップして科目を選択</p>
      </div>

      <!-- 科目選択カード -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 max-w-7xl mx-auto">
        <% @subjects.each_with_index do |subject, index| %>
          <%= link_to step2_test_sheets_path(subject_id: subject.id), 
                      class: "subject-card-glass",
                      data: { 
                        subject_id: subject.id,
                        subject: subject.name.downcase.gsub(/[^a-z]/, ''),
                        action: "click->kiosk-navigation#selectSubject"
                      },
                      style: "animation-delay: #{index * 0.1}s;" do %>
            <div class="subject-card-icon">
              <%= subject_icon(subject) %>
            </div>
            <div class="subject-card-title"><%= subject.name %></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- フッター: ホームボタン -->
    <div class="kiosk-footer-glass">
      <div class="text-center">
        <%= link_to root_path, class: "btn-glass-secondary inline-flex items-center gap-3" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          <span>最初に戻る</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
