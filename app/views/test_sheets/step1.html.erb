<div class="bg-kiosk">
  <div class="max-w-4xl mx-auto py-12 px-8">

    <!-- Progress -->
    <div class="progress-kiosk mb-10">
      <div class="progress-step active"></div>
      <div class="progress-step"></div>
      <div class="progress-step"></div>
    </div>

    <!-- Header -->
    <div class="text-center mb-14">
      <div class="glass-card-static inline-block px-8 py-5 mb-6">
        <div class="text-6xl">📚</div>
      </div>
      <h1 class="heading-kiosk-1 mb-2">科目を選んでください</h1>
      <p class="text-kiosk-body">タップして進む</p>
    </div>

    <!-- Subject Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
      <% @subjects.each do |subject| %>
        <%= link_to step2_test_sheets_path(subject_id: subject.id),
          data: { turbo: false },
          class: "subject-card" do %>

          <div class="subject-card-icon"><%= subject_icon(subject) %></div>
          <div class="subject-card-title"><%= subject.name %></div>

        <% end %>
      <% end %>
    </div>

    <div class="mt-16 text-center">
      <%= link_to root_path, 
          class: "btn-neo btn-neo-secondary",
          data: { turbo: false } do %>
        ⬅️ ホームに戻る
      <% end %>
    </div>

  </div>
</div>
